	
<div class="page">
	<div class="header">
		<h1>HEADER</h1>
	</div>
	<div class="left_bar">
		<h4 class="fheader">Фильтры отбора:</h4>
	</div>
	<div class="main">
		<div class="sort">
			<h5>Сортировать по:</h5>
			<h5 class="options">Новизне</h5>
			<h5 class="options">Популярности</h5>
			<h5 class="options">Цене&uarr;</h5>
			<h5 class="options">Цене&darr;</h5>
		</div>
		<% @items.each do |item| %>
			<div class="product">
				<% next unless item.description %>
				<%= link_to gard_path( item.description.id ) do %>
				<%#= link_to "", gard_show_item( item.description.id )  do %>
					<%= image_tag ( "/images/#{item.image_path}" ) %>
					<!-- <span class="brandName"><%#= item.category.gender.gender_name %></span> -->
					<span class="brandName"><%= item.brand.brand_name_shown %></span>
					<span class="productName"><%= item.productname %></span>
					<span class="price"><%= item.price_ua.to_i %> грн.</span>
					<span>(<%= item.discount %>% <%= item.msrp_ua.to_i %> грн.)</span>
				<% end %>
			</div>
		<% end %>

		<div class="apple_pagination">
			<%= will_paginate @items %>
		</div>
	</div>
<!-- 	<div class="right_bar">
	</div> -->
<!-- 	<div class="footer">
	</div> -->
</div>

