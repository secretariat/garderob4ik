<div class="page">
	<div class="header"><h1>HEADER</h1>
	</div>
	<div class="main">
		<center>
			<h3><%= @item.brand.brand_name %>  <%= @item.productname %></h3>
			<p>Код товара:&nbsp&nbsp<%= '%07d' % @item.id %></p>

		<div class="product-image-preview">
      <div class="inner">
        <%#= link_to image_tag(@product.image_url), @product.image_url, :for=>'photo0', :title=>"#{link_to("Увеличить изображение", @product.image_url, :target=>"_blank")}"%>
    		<%= link_to image_tag( "/images/descriptions/#{@item.description.images[0].image_path}" ), "/images/descriptions/#{@item.description.images[0].image_path}", :for=>'photo1', :title=>"#{link_to("Увеличить изображение", "/images/descriptions/#{@item.description.images[0].image_path}", :target=>"_blank")}" %>
      </div>
    </div>

		<div class="prodPhotos">
			<% if @item.description.images.any?%>
        <div class="product-image-gallery" id="photos_container">
          <% @item.description.images.each  do |photo|%>
            <%=link_to image_tag("/images/descriptions/#{photo.thumb_path}"), "/images/descriptions/#{photo.image_path}", :class=>"photo", :id => "photo#{photo.id}", :rel=>"lightbox", :title=>"#{link_to("Увеличить изображение", photo.image_path, :target=>"_blank")}" %>
          <%end%>
        </div>
      <%end%>
		</div>
		</center>
		<div class="prodInfo">
			<h3>Описание товара:</h3>
			<%= @item.description.description.html_safe %>
		</div>
	</div>
	<div class="right_bar">
		<div class="brandimg">brand image</div>
		<div class="price"><p><%= @item.price_ua.to_i %> грн.</p></div>
		<div class="prop">
		<p>Цвет:</p>
		<p><%= select_tag( :code, options_from_collection_for_select( @item.colors, "id", "color_name") )  %></p>

		<p>Размеры:</p>
		<p><%= select_tag( :code, options_from_collection_for_select( @item.sizes, "id", "size_value") )  %></p>
		</div>
	</div>
</div>

