.slider {
  height: 210px;
  overflow-y: hidden;
}

.nivoSlider {
  height: 210px;
    position:relative;
}
.nivoSlider img {
    position:absolute;
    top:0px;
    left:0px;
}
/* If an image is wrapped in a link */
.nivoSlider a.nivo-imageLink {
    position:absolute;
    top:0px;
    left:0px;
    width:100%;
    height:100%;
    border:0;
    padding:0;
    margin:0;
    z-index:6;
    display:none;
}
/* The slices and boxes in the Slider */
.nivo-slice {
    display:block;
    position:absolute;
    z-index:5;
    height:100%;
}
.nivo-box {
    display:block;
    position:absolute;
    z-index:5;
}
/* Caption styles */
.nivo-caption {
    position:absolute;
    left:0px;
    bottom:0px;
    background:#000;
    color:#fff;
    opacity:0.8; /* Overridden by captionOpacity setting */
    width:100%;
    z-index:8;
}
.nivo-caption p {
    padding:5px;
    margin:0;
}
.nivo-caption a {
    display:inline !important;
}
.nivo-html-caption {
    display:none;
}
/* Direction nav styles (e.g. Next & Prev) */
.nivo-directionNav a {
    position: absolute;
    top: 45%;
    z-index: 9;
    cursor: pointer;
}
.nivo-prevNav,.nivo-nextNav {
  display: block;
  width: 30px;
  height: 30px;
    text-indent: -9999px;
    position: absolute;
}
.nivo-prevNav {
  left: 10px;
    background: image-url( 'backgrounds/arrows.png' ) no-repeat;
}
.nivo-nextNav {
  right: 10px;
    background: image-url( 'backgrounds/arrows.png' ) no-repeat right 0;
}
/* Control nav styles (e.g. 1,2,3...) */
.nivo-controlNav {
  top: 185px;
  left: 10px;
    position: absolute;
}
.nivo-controlNav a {
  display: block;
  float: left;
    position: relative;
    z-index: 9;
    cursor: pointer;
    height: 21px;
    width: 21px;
    margin-right: 2px;
    text-indent: -9999px;
    background: image-url( 'backgrounds/bullets.png%>' )  no-repeat right 0;
}
.nivo-controlNav a.active {
    font-weight: bold;
    background-position: 0 -21px;

}
